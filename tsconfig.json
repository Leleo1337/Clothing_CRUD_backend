{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2024",  // Or another modern target like "es2022"
    "module": "commonjs",   // Use "esnext" for ES modules
    "moduleResolution": "node", // Or "node16" or "nodenext" depending on your Node.js version
    "esModuleInterop": true,   // Required for CommonJS interop with ES modules
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "./dist",      // Output directory for compiled JavaScript
    "sourceMap": true,       // Generate source maps for debugging
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "skipLibCheck": true     // Skip type checking .d.ts files
  },
  "include": ["src/**/*"],    // Include all TypeScript files in the 'src' directory
  "exclude": ["node_modules"], // Exclude the 'node_modules' directory
}